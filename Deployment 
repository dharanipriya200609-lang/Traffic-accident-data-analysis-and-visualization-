        "\n",
        "import pandas as pd\n",
        "import numpy as np\n",
        "from sklearn.model_selection import train_test_split\n",
        "from sklearn.preprocessing import LabelEncoder, StandardScaler\n",
        "from sklearn.ensemble import RandomForestClassifier\n",
        "import joblib\n",
        "\n",
        "# Dummy dataset example\n",
        "data = {\n",
        "    \"Age\": np.random.randint(18, 70, 200),\n",
        "    \"Gender\": np.random.randint(0, 2, 200),\n",
        "    \"Weather\": np.random.randint(0, 3, 200),\n",
        "    \"Road_Type\": np.random.randint(0, 3, 200),\n",
        "    \"Vehicle_Type\": np.random.randint(0, 4, 200),\n",
        "    \"Speed\": np.random.randint(30, 120, 200),\n",
        "    \"Alcohol\": np.random.randint(0, 2, 200),\n",
        "    \"Seatbelt\": np.random.randint(0, 2, 200),\n",
        "    \"High_Speed\": np.random.randint(0, 2, 200),\n",
        "    \"Risk\": np.random.randint(0, 3, 200),\n",
        "    \"Severity\": np.random.randint(0, 3, 200)\n",
        "}\n",
        "\n",
        "df = pd.DataFrame(data)\n",
        "\n",
        "X = df.drop(\"Severity\", axis=1)\n",
        "y = df[\"Severity\"]\n",
        "\n",
        "scaler = StandardScaler()\n",
        "X_scaled = scaler.fit_transform(X)\n",
        "\n",
        "X_train, X_test, y_train, y_test = train_test_split(\n",
        "    X_scaled, y, test_size=0.2, random_state=42\n",
        ")\n",
        "\n",
        "model = RandomForestClassifier(n_estimators=100)\n",
        "model.fit(X_train, y_train)\n",
        "\n",
        "# SAVE files\n",
        "joblib.dump(model, \"traffic_accident_model.pkl\")\n",
        "joblib.dump(scaler, \"scaler.pkl\")\n",
        "\n",
        "print(\"✅ Model and scaler saved successfully\")\n",
        "import joblib\n",
        "import numpy as np\n",
        "\n",
        "# LOAD\n",
        "model = joblib.load(\n",
        "\n",
        "\"traffic_accident_model.pkl\")\n",
        "scaler = joblib.load(\"scaler.pkl\")\n",
        "\n",
        "# New input\n",
        "new_data = np.array([[30, 1, 0, 1, 0, 95, 1, 0, 1, 2]])\n",
        "\n",
        "new_data_scaled = scaler.transform(new_data)\n",
        "\n",
        "prediction = model.predict(new_data_scaled)\n",
        "\n",
        "print(\"Predicted Accident Severity:\", prediction)\n",
        "!ls"
